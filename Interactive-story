    <script>
        let currentSection = 1;
        
        function nextSection(sectionNum) {
            document.getElementById(`section${currentSection}`).classList.add('hidden');
            
            const nextSec = document.getElementById(`section${sectionNum}`);
            nextSec.classList.remove('hidden');
            
            setTimeout(() => {
                nextSec.classList.add('visible');
            }, 100);
            
            currentSection = sectionNum;
            
            const statuses = {
                2: 'EXPLORING DATA VALLEY',
                3: 'ACCESSING NEURAL CORE', 
                4: 'MEETING CITIZENS',
                5: 'CONNECTING TO AI CLOUD'
            };
            
            document.getElementById('status').textContent = statuses[sectionNum] || 'TOUR COMPLETE';
            
            if (sectionNum === 5) {
                setTimeout(() => {
                    document.getElementById('final-status').style.display = 'block';
                }, 3000);
            }
        }
        
        function restart() {
            for (let i = 2; i <= 5; i++) {
                document.getElementById(`section${i}`).classList.add('hidden');
                document.getElementById(`section${i}`).classList.remove('visible');
            }
            
            document.getElementById('section1').classList.remove('hidden');
            document.getElementById('section1').classList.add('visible');
            document.getElementById('final-status').style.display = 'none';
            
            currentSection = 1;
            document.getElementById('status').textContent = 'WELCOMING NEW VISITOR';
        }
    </script>
